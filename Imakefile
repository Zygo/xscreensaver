   INSTPGMFLAGS = -s -m 4751
#endif

XLOCKCOREOBJS = xlock$(O)$(S)passwd$(O)$(S)resource$(O)$(S)\
utils$(O)$(S)logout$(O)$(S)mode$(O)$(S)\
ras$(O)$(S)xbm$(O)$(S)color$(O)$(S)sound$(O)
