<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="stonerview" _label="Stoner View" gl="yes">

  <command arg="--root"/>

  <video href="https://www.youtube.com/watch?v=xvDK_wwnXWs"/>

  <number id="delay" type="slider" arg="--delay %"
          _label="Frame rate" _low-label="Low" _high-label="High"
          low="0" high="100000" default="20000"
          convert="invert"/>

  <boolean id="wire"    _label="Wireframe"         arg-set="--wireframe"/>
  <boolean id="trans"   _label="Translucent"     arg-unset="--no-transparent"/>
  <boolean id="showfps" _label="Show frame rate"   arg-set="--fps"/>

  <xscreensaver-updater />

  <_description>
Chains of colorful squares dance around in spirals.  Inspired by the
classic SGI "ElectroPaint" screen saver from the 1980s.

Written by Andrew Plotkin; 2001.
  </_description>
</screensaver>
