# Remove inapplicable lines from the "configure --help" message,
# to make it less confusing.
#
configure::
	@TMP=configure.$$$$ ;						     \
	echo "munging configure's --help message..." ;			     \
	( perl -e '							     \
		my $$file="";						     \
		while (<>) { $$file .= $$_; }				     \
		$$_ = $$file;						     \
									     \
		s/\nFine tuning .*?:.*?\n\n/\n/si;			     \
		s/\nBy default, .*?:.*?\n\n/\n/si;			     \
		s/\nOptional Features:.*?\n\n/\n/s;			     \
		s/\nOptional Packages:.*?\n\n/\n/s;			     \
									     \
		s/^ +--help=short.*\n//m;				     \
		s/^ +--help=recursive.*\n//m;				     \
		s/^ +--sbindir=.*\n//m;					     \
		s/^ +--sysconfdir.*\n//m;				     \
		s/^ +--sharedstatedir.*\n.*\n//m;			     \
		s/^ +--oldincludedir.*\n//m;				     \
		s/^ +--includedir.*\n//m;				     \
		s/^ +--infodir.*\n//m;					     \
		s/^ +--htmldir.*\n//m;					     \
		s/^ +--dvidir.*\n//m;					     \
		s/^ +--pdfdir.*\n//m;					     \
		s/^ +--psdir.*\n//m;					     \
		s/^ +--runstatedir.*\n//m;				     \
		s/^ +--docdir.*\n//m;					     \
		s/^ +--libdir.*\n//m;					     \
		s/^ +--localedir.*\n//m;				     \
		s/^ +--with-x .*\n//m;					     \
		s/^ +--enable-year2038.*\n//m;				     \
		s/^ +--with-xinput.*\n//m;				     \
		s/^ +XMKMF.*\n//m;					     \
