# Update the version numbers in faq.html, bugs.html, etc.
www_versions::
	@								    \
  DEST=$$HOME/www/xscreensaver ;					    \
  VERS=`sed -n 's/[^0-9]*\([0-9]\.[0-9][^. ]*\).*/\1/p' utils/version.h |   \
	  head -1` ;							    \
  TMP=/tmp/xd.$$$$ ;							    \
  for f in "$$DEST"/*.html ; do						    \
    sed "s/\(CLASS=.latest.>\)[^<>]*\(<\)/\1$$VERS\2/gi" < "$$f" > "$$TMP" ;\
    if ! cmp -s "$$f" "$$TMP" ; then					    \
      diff -U0 "$$f" "$$TMP" ;						    \
      cp -p "$$TMP" "$$f" ;						    \
    fi ;								    \
    rm -f "$$TMP" ;							    \
  done

