# Install symlinks pointing back to the source directory, for debugging.
install_links::
	@ \
	cwd=`pwd` ;							\
	for d in $(SUBDIRS) ; do (					\
	  cd $$d ;							\
	  set -e ;							\
	  $(MAKE2) install -k INSTALL=true INSTALL_DATA=true		\
	       INSTALL_DIRS=false SUID_FLAGS= 2>&- |			\
	  while read -r s ; do						\
	    set - $$s ;							\
	    if [ "$$1" = true ]; then					\
	      a="$$cwd/$$d/$$2" ;					\
	      b="$$3" ;							\
	      d2=`dirname "$$b"` ;					\
	      [ -d "$$d2" ] || mkdir -p "$$d2" ;			\
	      a=`echo "$$a" | sed -e 's@/\./@/@'			\
		 -e 's@/[^/]*/\.\./@/@'` ;				\
	      echo "ln -sf $$a $$b" ;					\
	            ln -sf "$$a" "$$b" ;				\
	    fi ;							\
	  done ;							\
	) ; done


