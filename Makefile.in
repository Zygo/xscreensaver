version-date::
	@								    \
  SRC=utils/version.h ;							    \
  VERS=`sed -n 's/[^0-9]*\([0-9]\.[0-9][^. \"]*\).*/\1/p' < $$SRC |	    \
	 head -1`;							    \
  D=`date '+%d-%b-%Y'`;							    \
  TIME_T=`perl -e "use Date::Parse; print str2time('$$D 12:00')"` ;	    \
  TMP=/tmp/bv.$$ ;							    \
  sed -e "s/\([0-9]\.[0-9][^. \"]*\)/$$VERS/"				    \
      -e "s/([0-9][^()]*)/($$D)/"					    \
      -e "s/\(_RELEASED  *\)[0-9][0-9]*/\1$$TIME_T/"			    \
    < "$$SRC" > "$$TMP" ;						    \
  if ! cmp -s "$$SRC" "$$TMP" ; then					    \
    cat "$$TMP" > "$$SRC" ;						    \
    echo "Updated $$SRC date to \"$$D\"" ;				    \
  fi ;									    \
  rm -f "$$TMP"


update_spec_version::
	@								    \
	S1=$(srcdir)/xscreensaver.spec ;				    \
	S2=$(srcdir)/debian/changelog ;					    \
	U=$(srcdir)/utils/version.h ;					    \
	VERS=`sed -n 's/[^0-9]*\([0-9]\.[0-9][^. ]*\).*/\1/p' < $$U |	    \
	  head -1` ;							    \
	T="/tmp/xs.$$$$" ;						    \
	for F in "$$S1" "$$S2" ; do					    \
	  /bin/echo -n "Updating $$F to \"$$VERS\"... " ;		    \
	  sed -e "s/^\(%define.version[^0-9]*\)\(.*\)/\1$$VERS/"	    \
	      -e "s/([-0-9.]*)/($$VERS-1)/"				    \
	    < "$$F" > "$$T" ;						    \
	  if cmp -s "$$F" "$$T" ; then					    \
	    echo "unchanged." ;						    \
	  else								    \
	    cat "$$T" > "$$F" ;						    \
	    echo "done." ;						    \
	  fi ;								    \
	done ;								    \
	rm "$$T"

rpm::
	@								   \
  VERS=`sed -n 's/[^0-9]*\([0-9]\.[0-9][^. ]*\).*/\1/p' utils/version.h |  \
	  head -1` ;							   \
  DIR=`pwd`/rpm_build ;							   \
  ARCH=`rpm --showrc | sed -n 's/^build arch *: //p'` ;			   \
  ADIR=archive/ ;							   \
  TGZ="xscreensaver-$$VERS.tar.gz" ;					   \
  if [ ! -f "$${ADIR}$$TGZ" ]; then					   \
    echo "$${ADIR}$$TGZ does not exist: do 'make tar' first." ;		   \
    exit 1 ; 								   \
  fi ;									   \
  rm -rf "/var/tmp/xscreensaver-$$VERS-root" ;				   \
  rm -rf "$$DIR" ;							   \
  mkdir "$$DIR" ;							   \
  ( cd "$$DIR" || exit 1 ;						   \
    mkdir BUILD RPMS RPMS/"$$ARCH" SOURCES SPECS SRPMS ) ;		   \
  cp -p "$${ADIR}$$TGZ" "$$DIR/SOURCES/" ;				   \
  set -x ;								   \
  set -e ;								   \
  rpmbuild --define "_topdir $$DIR"					   \
           --define "USE_GL yes"					   \
           --nodeps							   \
           -v -ba xscreensaver.spec ;					   \
  set +x ;								   \
  echo '' ;								   \
  echo 'RPM build complete' ;						   \
  echo '' ;								   \
  mv "$$DIR/SRPMS/xscreensaver"*-"$$VERS"-*.rpm . ;			   \
  mv "$$DIR/RPMS/$$ARCH/xscreensaver"*-"$$VERS"-*.rpm . ;		   \
  rm -rf "$$DIR" ;							   \
  echo '' ;								   \
  ls -lFG xscreensaver*-"$$VERS"-*.rpm

