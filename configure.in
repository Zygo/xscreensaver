      *-*-solaris2.0* | *-*-solaris2.1* | *-*-solaris2.2* | *-*-solaris2.3* | *-*-solaris2.4* )
        AC_DEFINE(LESS_THAN_SOLARIS2_5)
      ;;
    esac
    INSTPGMFLAGS="-s -o root -m 4111"
    AC_DEFINE(HAVE_SHADOW)
    AC_DEFINE(SYSV)
    AC_DEFINE(SVR4)
    BITMAPTYPE="sun"
    PIXMAPTYPE="sol"
